<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/suggestionMainLayout"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:orientation="vertical"
        android:padding="10dp"
        android:gravity="center_horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/suggestionCIV"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/community_not_selected"/>

        <TextView
            android:id="@+id/suggestionNameTV"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="20sp"
            android:text="Name"
            android:textColor="@color/light_teal"
            android:textAlignment="center"/>



        <com.google.android.material.button.MaterialButton
            android:id="@+id/actionBtn"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            app:backgroundTint="@color/teal"
            android:contentDescription="actionButton"/>


    </LinearLayout>
</LinearLayout>