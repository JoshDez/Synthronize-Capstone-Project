<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/parentLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/mainLayout"
        android:orientation="vertical"
        android:background="@drawable/input_rounded_corners"
        android:backgroundTint="@color/darker_teal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Wrapper Header -->


        <!-- Post Header: User Profile Image, Username, Timestamp -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:orientation="horizontal">

            <!-- User Profile Image -->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileCIV"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/user_default_profile"
                android:scaleType="centerCrop" />

            <!-- Username and Timestamp -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/usernameTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/username"
                    android:textColor="@color/light_teal"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/timestampTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/light_teal"
                    android:contentDescription="@string/timestamp"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Post Image -->

        <!-- Post Description -->
        <TextView
            android:id="@+id/descriptionTV"
            android:layout_margin="16dp"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:textStyle="bold"
            android:textColorLink="@color/light_blue"
            android:contentDescription="@string/feed_description"
            android:textColor="@color/light_teal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/upvoteLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/upBtn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/upbtn"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:tint="@color/light_teal" />

                <TextView
                    android:id="@+id/upvoteCountTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textAlignment="center"
                    android:textColor="@color/light_teal" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/downvoteLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/downBtn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/downbtn"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:tint="@color/light_teal" />

                <TextView
                    android:id="@+id/downvoteCountTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textAlignment="center"
                    android:textColor="@color/light_teal" />

            </LinearLayout>

        </LinearLayout>


        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/divider1"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            app:dividerColor="@color/gray2"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/suggestionsRV"
            android:visibility="gone"
            android:orientation="horizontal"
            tools:listitem="@layout/item_suggestion"
            android:layout_width="wrap_content"
            android:background="@color/gray3"
            android:layout_height="190dp"/>

    </LinearLayout>


    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:dividerColor="@color/light_teal" />

</LinearLayout>
