<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/gray2"
    android:padding="8dp"
    android:orientation="vertical">

    <!-- Wrapper Header -->

    <LinearLayout
        android:id="@+id/mainLayout"
        android:orientation="vertical"
        android:background="@color/gray3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal">

            <!-- User Profile Image -->

            <!-- Username and Timestamp -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/eventNameTV"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:contentDescription="@string/username"
                    android:textColor="@color/light_teal"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <ImageButton
                android:id="@+id/menu"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:srcCompat="@drawable/kebab_menu_icon" />

        </LinearLayout>

        <ImageView
            android:id="@+id/eventImageIV"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="15dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:src="@color/black" />

        <TextView
            android:id="@+id/eventDescriptionTV"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:autoLink="web"
            android:textColorLink="@color/light_blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/feed_description"
            android:textColor="@color/light_teal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/baseline_location_on_24" />

            <TextView
                android:id="@+id/eventLocationTV"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:contentDescription="@string/community_name"
                android:padding="5dp"
                android:textColor="@color/light_teal"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/baseline_calendar_month_24"
                app:tint="@color/light_teal"/>

            <TextView
                android:id="@+id/eventDateTV"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:contentDescription="@string/community_name"
                android:padding="5dp"
                android:textColor="@color/light_teal"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_toLeftOf="@id/participateBtn"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/baseline_time_24"
                    app:tint="@color/light_teal"/>

                <TextView
                    android:id="@+id/eventTimeTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:contentDescription="@string/community_name"
                    android:padding="5dp"
                    android:textColor="@color/light_teal"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/participateBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="25dp"
                android:text="Participate"
                android:backgroundTint="@color/light_teal"
                />

        </RelativeLayout>
    </LinearLayout>

    <!-- Post Header: User Profile Image, Username, Timestamp -->

    <!-- Event Image -->

    <!-- Event Description -->

    <!-- Event Location -->

    <!-- Event Date -->

    <!-- Post Description -->
</LinearLayout>
