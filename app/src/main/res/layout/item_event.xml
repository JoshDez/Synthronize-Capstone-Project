<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/gray2"
    android:orientation="vertical">


    <!-- Wrapper Header -->
    <LinearLayout
        android:id="@+id/feedWrapperLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark_teal"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- User Profile Image -->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/wrapperCIV"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/community_not_selected" />

            <!-- Community Name -->
            <TextView
                android:id="@+id/wrapperName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Username/Community Name"
                android:textColor="@color/light_teal"
                android:textSize="14sp"
                android:textStyle="bold" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/communityActionBtn"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_marginEnd="20dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Post Header: User Profile Image, Username, Timestamp -->
    <LinearLayout
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal">

        <!-- User Profile Image -->

        <!-- Username and Timestamp -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/eventNameTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/username"
                android:textColor="@color/light_teal"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dateTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/light_teal"
                android:contentDescription="@string/timestamp"
                android:textSize="14sp" />

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/participateBtn"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:backgroundTint="@color/light_teal"
            android:src="@drawable/kebab_menu_icon"
            android:layout_weight="1"
            android:textColor="@color/text_shadow_white"
            android:textSize="12sp"
            android:text="Participate"
            android:textStyle="bold"
            app:tint="@color/light_teal"/>

    </LinearLayout>

    <!-- Post Description -->

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="8dp"
        app:dividerColor="@color/gray"/>
</LinearLayout>
