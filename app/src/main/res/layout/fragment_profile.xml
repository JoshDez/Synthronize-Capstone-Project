<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray2"
    tools:context=".ProfileFragment">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/profileRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/userInfoLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/darker_teal"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="220dp"
                        android:layout_below="@id/divider">


                        <ImageView
                            android:id="@+id/userCoverIV"
                            android:layout_width="match_parent"
                            android:layout_height="160dp"
                            android:src="@color/black" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/userProfileCIV"
                                app:civ_border_width="2dp"
                                app:civ_border_color="@color/white"
                                android:layout_width="110dp"
                                android:layout_height="110dp"
                                android:layout_centerInParent="true"
                                android:layout_alignParentBottom="true"
                                android:src="@drawable/user_default_profile" />
                        </RelativeLayout>
                    </FrameLayout>


                    <TextView
                        android:id="@+id/userDisplayNameTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/userProfileCIV"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="20dp"
                        android:contentDescription="@string/full_name"
                        android:textAlignment="center"
                        android:textColor="@color/light_teal"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/userNameTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/userDisplayNameTV"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="20dp"
                        android:contentDescription="@string/username"
                        android:textAlignment="center"
                        android:textColor="@color/light_teal"
                        android:textSize="16sp" />


                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:id="@+id/postsContainer"
                            android:layout_width="73dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_below="@id/userCoverIV"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/postsCountTV"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textAlignment="center"
                                android:textColor="@color/light_teal"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/postsTV"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/posts"
                                android:textAlignment="center"
                                android:textColor="@color/light_teal"
                                android:textSize="12sp" />
                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/communitiesContainer"
                            android:layout_width="73dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_below="@id/userCoverIV"
                            android:layout_toRightOf="@id/postsContainer"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/communitiesCountTV"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textAlignment="center"
                                android:textColor="@color/light_teal"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/communitiesTV"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/communities"
                                android:textAlignment="center"
                                android:textColor="@color/light_teal"
                                android:textSize="12sp" />
                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/friendsContainer"
                            android:layout_width="73dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_below="@id/userCoverIV"
                            android:layout_toLeftOf="@id/filesContainer"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/friendsCountTV"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textAlignment="center"
                                android:textColor="@color/light_teal"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/friendsTV"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/friends"
                                android:textAlignment="center"
                                android:textColor="@color/light_teal"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/filesContainer"
                            android:layout_width="73dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_below="@id/userCoverIV"
                            android:layout_alignParentEnd="true"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/filesCountTV"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textAlignment="center"
                                android:textColor="@color/light_teal"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/filesTV"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Files"
                                android:textAlignment="center"
                                android:textColor="@color/light_teal"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>


                    <TextView
                        android:id="@+id/userDescriptionTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autoLink="web"
                        android:textColorLink="@color/light_blue"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="10dp"
                        android:backgroundTint="#00FFFFFF"
                        android:contentDescription="@string/user_description"
                        android:drawableTint="#00FFFFFF"
                        android:textAlignment="center"
                        android:textColor="@color/light_teal"
                        android:textSize="15sp" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:orientation="horizontal"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp">

                        <LinearLayout
                            android:id="@+id/birthdayLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="invisible">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/birthday_icon"
                                app:tint="@color/light_teal" />

                            <TextView
                                android:id="@+id/birthdayTV"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_marginBottom="10dp"
                                android:backgroundTint="#00FFFFFF"
                                android:contentDescription="@string/user_description"
                                android:drawableTint="#00FFFFFF"
                                android:text="Birthday: December 19, 2002"
                                android:textColor="@color/light_teal"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/userRoleLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/birthdayLayout"
                            android:orientation="horizontal"
                            android:visibility="invisible">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/user_role"
                                app:tint="@color/light_teal" />

                            <TextView
                                android:id="@+id/userRoleTV"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_marginBottom="10dp"
                                android:backgroundTint="#00FFFFFF"
                                android:contentDescription="@string/user_description"
                                android:drawableTint="#00FFFFFF"
                                android:text="Role"
                                android:textColor="@color/light_teal"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/editProfileBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:text="Edit Profile"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:drawableLeft="@drawable/baseline_edit_24"
                            android:drawableTint="@color/white"
                            app:cornerRadius="0dp"
                            app:backgroundTint="@color/teal2" />
                    </RelativeLayout>


                </LinearLayout>

                <com.google.android.material.divider.MaterialDivider
                    android:id="@+id/divider2"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@id/mainToolbar"
                    app:dividerColor="@color/teal2" />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:background="@drawable/gradient_teal"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/postsBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Posts"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:textColor="@color/light_teal"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:clickable="true"
                        android:focusable="true" />

                    <Button
                        android:id="@+id/filesBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Files"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:textAlignment="center"
                        android:textColor="@color/light_teal"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:clickable="true"
                        android:focusable="true" />

                </LinearLayout>

                <com.google.android.material.divider.MaterialDivider
                    android:id="@+id/divider3"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@id/mainToolbar"
                    app:dividerColor="@color/teal2" />


                <LinearLayout
                    android:id="@+id/searchContainerLL"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/gradient_teal"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/searchEdtTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/input_rounded_corners"
                        android:hint="@string/Search"
                        android:padding="10dp" />

                    <ImageButton
                        android:id="@+id/cancelBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="end"
                        android:layout_marginEnd="10dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/cancel_icon" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/postsRV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/filesRV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />
            </LinearLayout>
        </ScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</RelativeLayout>