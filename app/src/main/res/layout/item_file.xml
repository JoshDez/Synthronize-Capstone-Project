<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/gray2"
    android:padding="8dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/mainLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray3">


        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:orientation="horizontal">

            <!-- User Profile Image -->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileCIV"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/user_default_profile"
                android:scaleType="centerCrop" />

            <!-- Username and Timestamp -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/usernameTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/username"
                    android:textColor="@color/light_teal"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/timestampTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/light_teal"
                    android:contentDescription="@string/timestamp"
                    android:textSize="12sp" />

            </LinearLayout>

            <ImageButton
                android:id="@+id/menuBtn"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/kebab_menu_icon"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                app:tint="@color/light_teal"/>

        </LinearLayout>

        <!-- Post Image -->

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_margin="16dp"
            android:gravity="center"
            android:animateLayoutChanges="true"
            android:inAnimation="@android:anim/slide_in_left"
            android:outAnimation="@android:anim/slide_out_right">
        </androidx.viewpager2.widget.ViewPager2>

        <me.relex.circleindicator.CircleIndicator3
            android:id="@+id/circleIndicator3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="10dp"
            app:ci_drawable="@color/light_teal"/>



        <!-- Post Description -->
        <TextView
            android:id="@+id/captionTV"
            android:layout_marginTop="16dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/feed_description"
            android:textColor="@color/light_teal" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#9C12181E"
            android:layout_marginTop="16dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:id="@+id/fileLayout"
                android:padding="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/fileIconIV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/file_icon"/>

                <TextView
                    android:id="@+id/fileNameTV"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="File.txt"
                    android:paddingStart="20dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/light_teal"
                    android:textSize="16sp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/loveLayout"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/loveBtn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/baseline_favorite_border_24"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:tint="@color/light_teal"/>

                <TextView
                    android:id="@+id/lovesCountTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="0"
                    android:contentDescription="@string/lovescount"
                    android:textColor="@color/light_teal" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/commentLayout"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_marginStart="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/commentBtn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:src="@drawable/baseline_comment_24"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:tint="@color/light_teal" />

                <TextView
                    android:id="@+id/commentsCountTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="0"
                    android:contentDescription="@string/comment_count"
                    android:textColor="@color/light_teal" />

            </LinearLayout>


            <EditText
                android:id="@+id/commentEdtTxt"
                android:padding="7dp"
                android:layout_weight="10"
                android:layout_width="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_height="45dp"
                android:background="@drawable/input_rounded_corners"
                android:hint="Write your comment"/>

            <ImageButton
                android:id="@+id/sendBtn"
                android:visibility="gone"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:src="@drawable/send_msg_icon"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                app:tint="@color/light_teal"/>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>
