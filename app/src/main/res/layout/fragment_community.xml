<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray2"
    tools:context=".CommunityFragment">

    <LinearLayout
        android:id="@+id/upperNavLayout"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/gradient_teal"
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <LinearLayout
            android:id="@+id/feedsBtn"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/feedsIconIV"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:tint="@color/light_teal"
                android:src="@drawable/feeds_not_selected"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Feeds"
                android:gravity="center"
                android:textColor="@color/light_teal"
                android:textSize="13sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/eventsBtn"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/eventsIconIV"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:tint="@color/light_teal"
                android:src="@drawable/events_not_selected"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Events"
                android:gravity="center"
                android:textColor="@color/light_teal"
                android:textSize="13sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/forumsBtn"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/forumsIconIV"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:tint="@color/light_teal"
                android:src="@drawable/forums_not_selected"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Forums"
                android:gravity="center"
                android:textColor="@color/light_teal"
                android:textSize="13sp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/marketBtn"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/marketIconIV"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:tint="@color/light_teal"
                android:src="@drawable/market_not_selected"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Market"
                android:gravity="center"
                android:textColor="@color/light_teal"
                android:textSize="13sp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/activitiesBtn"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/activitiesIconIV"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:tint="@color/light_teal"
                android:src="@drawable/activities_not_selected"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Activities"
                android:gravity="center"
                android:textColor="@color/light_teal"
                android:textSize="13sp"/>
        </LinearLayout>
    </LinearLayout>

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/upperNavLayout"
        android:background="@color/light_teal"
        app:dividerColor="@color/light_teal" />

    <!-- Frame layout for community tabs -->
    <FrameLayout
        android:id="@+id/communityFrameLayout"
        android:layout_below="@id/divider1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"/>


</RelativeLayout>
