<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/darker_teal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChatroomSettings">

    <RelativeLayout
        android:id="@+id/mainToolbar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/darker_teal"
        android:padding="10dp">

        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/back_icon"
            app:tint="@color/light_teal" />
    </RelativeLayout>


    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/mainToolbar"
        android:background="@color/light_teal"
        app:dividerColor="@color/light_teal" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@+id/divider1"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/chatroomCIV"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginTop="40dp"
                android:layout_centerInParent="true"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:src="@color/light_teal"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="40dp"/>


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/chatroomNameTV"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textAlignment="center"
                            android:backgroundTint="@color/light_teal"
                            android:layout_marginStart="20dp"
                            android:paddingStart="10dp"
                            android:layout_marginEnd="20dp"
                            android:layout_weight="1"
                            android:paddingEnd="10dp"
                            android:textColor="@color/light_teal"
                            android:contentDescription="@string/full_name"
                            android:textSize="20sp"/>


                        <EditText
                            android:id="@+id/chatroomNameEdtTxt"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/light_teal"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:paddingStart="10dp"
                            android:layout_weight="1"
                            android:paddingEnd="10dp"
                            android:textColor="@color/light_teal"
                            android:contentDescription="@string/full_name"
                            android:textSize="16sp"/>

                    </LinearLayout>

                </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="50dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.google.android.material.divider.MaterialDivider
                    android:id="@+id/divider3"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@id/mainToolbar"
                    android:background="@color/light_teal"
                    app:dividerColor="@color/light_teal" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/viewJoinRequestsBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/dark_teal"
                    android:text="@string/view_join_requests"
                    android:textColor="@color/light_teal"
                    android:textSize="16sp"
                    android:visibility="gone" />


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/viewCommunityReportsBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/dark_teal"
                    android:text="View Members"
                    android:textColor="@color/light_teal"
                    android:textSize="16sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/editCommunityDetailsBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/dark_teal"
                    android:text="Edit Chatroom Details"
                    android:textColor="@color/light_teal"
                    android:textSize="16sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/deleteCommunityBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/darkish_red"
                    android:text="Leave Conversation"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>


            <Space
                android:layout_width="match_parent"
                android:layout_height="40dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/saveBtn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:backgroundTint="@color/teal"
                android:text="Save Chatroom Details"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:cornerRadius="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.494"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/confirmPassEdtTxt" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
        </LinearLayout>
    </ScrollView>



</RelativeLayout>